{
	"name": "artifacts-mmo-controller",
	"version": "0.0.1",
	"private": true,
	"description": "A monorepo for the GeekZoo Artifacts MMO controller",
	"scripts": {
		"dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
		"dev:backend": "cd backend && encore run",
		"dev:frontend": "cd frontend && pnpm dev",
		"build": "pnpm run build:backend && pnpm run build:frontend",
		"build:backend": "cd backend && encore build",
		"build:frontend": "cd frontend && pnpm build",
		"test": "pnpm run test:backend && pnpm run test:frontend",
		"test:backend": "cd backend && encore test ./...",
		"test:frontend": "cd frontend && pnpm test",
		"lint": "pnpm run lint:frontend",
		"lint:frontend": "cd frontend && pnpm lint",
		"format": "pnpm run format:frontend",
		"format:frontend": "cd frontend && pnpm format"
	},
	"devDependencies": {
		"concurrently": "^9.1.0"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	}
}
